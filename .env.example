# =================================
# Supabase Configuration (Required)
# =================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_APP_NAME=Homestead Architect
VITE_SHOW_GAME_DEBUG=false

# Optional service role key (used by validation script)
SUPABASE_SERVICE_ROLE_KEY=

# =================================
# Development Environment
# =================================
DEV_IMAGE=homestead-architect-dev:latest
DEV_WEB_PORT=8081
DEV_PGADMIN_PORT=5050

# =================================
# Production Environment
# =================================
PROD_IMAGE=homestead-architect-prod:latest
PROD_WEB_PORT=8080

# =================================
# Database Configuration (Optional)
# For local PostgreSQL in development
# =================================
POSTGRES_DB=homestead_dev
POSTGRES_USER=homestead_user
POSTGRES_PASSWORD=homestead_password
POSTGRES_PORT=5432

# =================================
# PgAdmin Configuration (Optional)
# For database management in development
# =================================
PGADMIN_DEFAULT_EMAIL=admin@homestead.local
PGADMIN_DEFAULT_PASSWORD=admin

# =================================
# Production Supabase (Optional)
# For validation scripts and service role access
# =================================
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_DB_HOST=supabase.bitscon.net
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_db_password_here

# =================================
# Optional External Services
# =================================
# SENTRY_DSN=your_sentry_dsn_here
# LOG_LEVEL=info
