FROM node:20-alpine

WORKDIR /app

# Install dependencies first to leverage Docker layer caching
COPY package*.json ./
RUN npm ci && \
    chown -R node:node /app/node_modules

# Copy rest of application
COPY . .

# Create temp directories with proper permissions and set ownership
RUN mkdir -p /app/tmp /app/.vite /app/node_modules/.vite /app/node_modules/.vite-temp && \
    chown -R node:node /app && \
    chmod -R 775 /app

USER node

EXPOSE 5173

CMD ["npm", "run", "dev"]